{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "amd",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "newLine": "LF"
  },
  "include": ["src/*"]
}
